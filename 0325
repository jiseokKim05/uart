////////////////////////////////////////////////////////////////////////////
python
////////////////////////////////////////////////////////////////////////////

import serial

ser = serial.Serial('/dev/ttyS0', 9600, timeout=1)

ser.write(b'Hello, World!')

data = ser.read(15)
print(data)

ser.close()

